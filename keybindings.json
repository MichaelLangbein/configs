// Place your key bindings in this file to override the defaults
[
    // remapping ctrl-shift-p
    { "key": "ctrl+shift+[comma]", "command": "workbench.action.showCommands" },

    // apple-specifics
    { "key": "ctrl+a", "command": "editor.action.selectAll" },
    { "key": "ctrl+f", "command": "actions.find" },
    { "key": "ctrl+d", "command": "editor.action.addSelectionToNextFindMatch" },
    { "key": "ctrl+c", "command": "editor.action.clipboardCopyAction" },
    { "key": "ctrl+v", "command": "editor.action.clipboardPasteAction" },
    { "key": "alt+down", "command": "editor.action.moveLinesDownAction", "when": "editorTextFocus && !editorReadonly" },
    { "key": "alt+up",   "command": "editor.action.moveLinesUpAction",   "when": "editorTextFocus && !editorReadonly" },
    { "key": "cmd+w",    "command": "workbench.action.closeActiveEditor" },


    // move between panels
    { "key": "ctrl+cmd+e", "command": "workbench.action.focusActiveEditorGroup"},
    { "key": "ctrl+cmd+t", "command": "workbench.action.terminal.focus"},
    { "key": "ctrl+cmd+x", "command": "workbench.files.action.focusFilesExplorer"},
    { "key": "ctrl+cmd+g", "command": "workbench.scm.focus"},
    { "key": "ctrl+cmd+f", "command": "workbench.action.findInFiles" },
    { "key": "ctrl+cmd+s", "command": "workbench.view.search.focus"},

    // move cursor
    { "key": "ctrl+k", "command": "cursorDown", "when": "editorTextFocus" },
    { "key": "ctrl+l", "command": "cursorUp", "when": "editorTextFocus" },
    { "key": "ctrl+i", "command": "cursorLeft", "when": "editorTextFocus" },
    { "key": "ctrl+o", "command": "cursorRight", "when": "editorTextFocus" },
    { "key": "ctrl+j", "command": "cursorWordLeft", "when": "editorTextFocus" },
    { "key": "ctrl+[semicolon]", "command": "cursorWordRight", "when": "editorTextFocus" },
    { "key" :"ctrl+p", "command": "cursorEnd", "when": "editorTextFocus" },
    { "key" :"ctrl+u", "command": "cursorLineStart", "when": "editorTextFocus" },

    // move and select
    { "key": "ctrl+shift+k", "command": "cursorDownSelect", "when": "editorTextFocus" },
    { "key": "ctrl+shift+l", "command": "cursorUpSelect", "when": "editorTextFocus" },
    { "key": "ctrl+shift+i", "command": "cursorLeftSelect", "when": "editorTextFocus" },
    { "key": "ctrl+shift+o", "command": "cursorRightSelect", "when": "editorTextFocus" },
    { "key": "ctrl+shift+j", "command": "cursorWordLeftSelect", "when": "editorTextFocus" },
    { "key": "ctrl+shift+[semicolon]", "command": "cursorWordRightSelect", "when": "editorTextFocus" },
    { "key": "ctrl+shift+u", "command": "cursorLineStartSelect", "when": "editorTextFocus" },
    { "key": "ctrl+shift+p", "command": "cursorLineEndSelect", "when": "editorTextFocus" },

    // selectWidget control
    { "key": "ctrl+k", "command": "selectNextSuggestion", "when": "editorTextFocus && suggestWidgetVisible"},
    { "key": "ctrl+l", "command": "selectPrevSuggestion", "when": "editorTextFocus && suggestWidgetVisible"},

    // file-editor control
    { "key": "ctrl+k", "command": "list.focusDown", "when": "filesExplorerFocus"},
    { "key": "ctrl+l", "command": "list.focusUp", "when": "filesExplorerFocus"},

    // duplicate cursor
    { "key": "ctrl+cmd+k", "command": "editor.action.insertCursorBelow", "when": "editorTextFocus" },
    { "key": "ctrl+cmd+l", "command": "editor.action.insertCursorAbove", "when": "editorTextFocus" },

    // commenting
    { "key": "ctrl-m ctrl-c", "command": "editor.action.commentLine", "when": "editorTextFocus" },
    { "key": "ctrl+oem_3", "command": "-workbench.action.terminal.toggleTerminal" },

    // misc
    { "key": "ctrl+shift+z", "command": "workbench.action.toggleZenMode" },
    { "key": "ctrl+shift+alt+f", "command": "editor.action.formatDocument" },
    { "key": "ctrl+s", "command": "saveAll" },
    // { "key": "ctrl+w", "command": "workbench.action.closeWindow" }

    // mac-specific
    // move row up and down: option + arrow
    // enter in file explorer opens file, not renames file. ... is space by default.
]
