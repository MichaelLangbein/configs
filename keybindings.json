// Place your key bindings in this file to override the defaults
[
    // remapping ctrl-shift-p
    { "key": "ctrl+shift+oem_comma", "command": "workbench.action.showCommands" },

    // move between pannels
    { "key": "ctrl+alt+e", "command": "workbench.action.focusActiveEditorGroup", "when": "terminalFocus"},
    { "key": "ctrl+alt+t", "command": "workbench.action.terminal.focus"},
    { "key": "ctrl+alt+f", "command": "workbench.files.action.focusFilesExplorer"},
    { "key": "ctrl+alt+s", "command": "workbench.view.search.focus"},

    // move cursor
    { "key": "ctrl+k", "command": "cursorDown", "when": "editorTextFocus" },
    { "key": "ctrl+l", "command": "cursorUp", "when": "editorTextFocus" },
    { "key": "ctrl+i", "command": "cursorLeft", "when": "editorTextFocus" },
    { "key": "ctrl+o", "command": "cursorRight", "when": "editorTextFocus" },
    { "key": "ctrl+j", "command": "cursorWordLeft", "when": "editorTextFocus" },
    { "key": "ctrl+oem_3", "command": "cursorWordRight", "when": "editorTextFocus" },
    { "key" :"ctrl+p", "command": "cursorEnd", "when": "editorTextFocus" },
    { "key" :"ctrl+u", "command": "cursorLineStart", "when": "editorTextFocus" },

    // move and select
    { "key": "ctrl+shift+k", "command": "cursorDownSelect", "when": "editorTextFocus" },
    { "key": "ctrl+shift+l", "command": "cursorUpSelect", "when": "editorTextFocus" },
    { "key": "ctrl+shift+i", "command": "cursorLeftSelect", "when": "editorTextFocus" },
    { "key": "ctrl+shift+o", "command": "cursorRightSelect", "when": "editorTextFocus" },
    { "key": "ctrl+shift+j", "command": "cursorWordLeftSelect", "when": "editorTextFocus" },
    { "key": "ctrl+shift+oem_3", "command": "cursorWordRightSelect", "when": "editorTextFocus" },
    { "key": "ctrl+shift+u", "command": "cursorLineStartSelect", "when": "editorTextFocus" },
    { "key": "ctrl+shift+p", "command": "cursorLineEndSelect", "when": "editorTextFocus" },

    // selectWidget control
    { "key": "ctrl+k", "command": "selectPrevSuggestion", "when": "editorTextFocus && suggestWidgetVisible"},
    { "key": "ctrl+l", "command": "selectNextSuggestion", "when": "editorTextFocus && suggestWidgetVisible"},

    // duplicate cursor
    { "key": "ctrl+alt+k", "command": "editor.action.insertCursorBelow", "when": "editorTextFocus" },
    { "key": "ctrl+alt+l", "command": "editor.action.insertCursorAbove", "when": "editorTextFocus" },

    // commenting
    { "key": "ctrl-m ctrl-c", "command": "editor.action.commentLine", "when": "editorTextFocus" },
    { "key": "ctrl+oem_3", "command": "-workbench.action.terminal.toggleTerminal" },
]
